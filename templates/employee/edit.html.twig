{% extends 'base.html.twig' %}

{% block title %}
{{ employee.firstname ~ ' ' ~ employee.lastname }}
{% endblock %}

{% block body %}
{{ form_start(form) }}
    <div>{{ form_row(form.lastname) }}</div>
    <div>{{ form_row(form.firstname) }}</div>
    <div>{{ form_row(form.email) }}</div>
    <div class="form-flex">
        <div>{{ form_row(form.start) }}</div>
        <div>{{ form_row(form.status) }}</div>
    </div>
    <button type="submit" class="button button-submit">Enregistrer</button>
{{ form_end(form) }}
{% endblock %}
