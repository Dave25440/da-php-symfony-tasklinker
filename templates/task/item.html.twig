<a class="task" href="#">
    <h3>{{ task.title }}</h3>
    {% if task.description %}
    <p>{{ task.description }}</p>
    {% endif %}
    <div class="task-infos">
        {% if task.deadline %}
        <div class="task-deadline">
            <i class="fa-regular fa-calendar"></i>
            {{ task.deadline|date('d/m/Y') }}
        </div>
        {% endif %}
        {% if task.employee %}
        <div class="mini-user">
            {{ task.employee.firstname|slice(0,1)|upper ~ task.employee.lastname|slice(0,1)|upper }}
        </div>
        {% endif %}
    </div>
</a>
